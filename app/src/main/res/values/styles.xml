<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- customize the color palette -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:actionBarTabBarStyle">@style/MyActionBarTabs</item>
        <!--兼容低版本-->
        <item name="actionBarTabBarStyle">@style/MyActionBarTabs</item>
    </style>

    <style name="MyActionBarTabs" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <!--兼容低版本-->
        <item name="background">@drawable/actionbar_tab_indicator</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">@color/txt_title</item>
        <item name="android:textSize">@dimen/list_item_title_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <color name="txt_title">#333333</color>
</resources>
